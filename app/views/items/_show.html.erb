<% if item.item_users.find_by(user_id: current_user.id) %>
    <h3><%= @item.title %></h3>
    <p><%= @item.description %></p>
    <%= link_to "Edit Item", edit_item_path %>
<% else %>
    <h3><%= @item.title %></h3>
    <p><%= @item.description %></p>
    <%= button_to "Reserve", reserved_items_path, params: {user_id: current_user.id, item_id: item.id} %>
<% end %>



